@inherits LayoutComponentBase

<style>
    .header {
        background-color: #f8f9fa;
        /* padding: 1rem; */
        border-bottom: 1px solid #ddd;
    }

    .top-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .navbar-toggler {
        display: none;
    }

    .nav-scrollable {
        display: flex;
        justify-content: center;
        margin-top: 1rem;
    }

    nav {
        display: flex;
    }

    .nav-item {
        margin: 0 1rem;
    }

    .nav-link {
        text-decoration: none;
        color: #000;
    }

        .nav-link:hover {
            text-decoration: underline;
        }
</style>

<div class="header">
    <div class="top-row ps-3 navbar navbar-dark">
        @* <div class="container-fluid">
            <a class="navbar-brand" href="">NyDatingApp1</a>
        </div> *@
    </div>
    <input type="checkbox" title="Navigation menu" class="navbar-toggler" />
    <div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
        <nav>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Tabel">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Tabel
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="login">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> login
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="details">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> details
                </NavLink>
            </div>
        </nav>
    </div>
    <hr />
</div>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

